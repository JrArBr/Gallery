extends ../../layout.pug
block contenido
  .container
    for imagen in all
      .white.border.tr.large-padding
        .row
          .col-md-10
            h2= imagen.title
          .col-md-2
            a(href="/app/imagenes/"+imagen._id+"/edit" class="right_space") Editar
            form(action="/app/imagenes/"+imagen._id+"?_method=DELETE" method="POST" class="link" )
              input(type="submit" value="Eliminar")
